{
  "manifest_version": 3,
  "name": "YouTube NonStop",
  "version": "1.0",
  "description": "Keeps YouTube active to prevent the 'Are you still watching?' prompt.",
  "permissions": ["tabs", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}